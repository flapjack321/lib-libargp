 /* normal libc functions we call */
 #undef __flockfile
 #define __flockfile flockfile
@@ -95,6 +97,8 @@
 #undef __vsnprintf
 #define __vsnprintf vsnprintf
 
+#if !_LIBC
+
 #if defined(HAVE_DECL_CLEARERR_UNLOCKED) && !HAVE_DECL_CLEARERR_UNLOCKED
