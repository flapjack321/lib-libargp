 #endif
@@ -150,8 +154,8 @@ extern char *__argp_base_name (const char *arg);
 # define __argp_base_name last_component
 #endif
 
-#if defined _LIBC || HAVE_DECL_PROGRAM_INVOCATION_SHORT_NAME
